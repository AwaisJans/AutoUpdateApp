<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:background="@color/bg_color"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.PermissionScreen">





    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:id="@+id/id1"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:gravity="start|center"
        android:text="Permissions Required"
        android:textColor="@color/black"
        android:fontFamily="@font/barlow_extrabold"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="70dp"
        android:layout_below="@id/id1"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginStart="10dp"
        android:text="@string/permission_string"
        android:textColor="@color/black"
        android:fontFamily="@font/barlow"/>




    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnAllowPermission"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/white"
        android:elevation="2dp"
        android:gravity="center"
        android:minHeight="70dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:stateListAnimator="@null"
        android:text="Allow Permission"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:cornerRadius="7dp" />





</RelativeLayout>